{
  "name": "cv-ops",
  "version": "0.0.1",
  "dependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/tailwind": "^5.1.0",
    "@nico-i/cv-data": "1.10.0",
    "astro": "^4.4.11",
    "astro-i18next": "^1.0.0-beta.21",
    "graphql-tag": "^2.12.6",
    "puppeteer": "^22.5.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2"
  },
  "scripts": {
    "dev": "dotenvx run -- astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "gen:i18n": "bunx astro-i18next generate",
    "gen:gql:watch": "bunx graphql-codegen --watch",
    "o:cms": "dotenvx run -- npx opn-cli $STRAPI_URL/admin",
    "lint": "eslint .",
    "lint:types": "tsc --noEmit --incremental false",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky || true"
  },
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@dotenvx/dotenvx": "^0.26.0",
    "@nico-i/eslint-config": "^2.4.0",
    "@nico-i/prettier-config": "^1.0.0",
    "@types/node": "^22.0.0",
    "commitlint-plugin-spend": "^1.0.1",
    "eslint": "^8.57.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
